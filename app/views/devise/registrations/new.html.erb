<div class="row nmhxs mtl">
  <div class="col-sm-6 col-sm-offset-3 phxs">
    <div class="c-1 fsm fwl italicize">
      ADMIN PANEL
    </div>
    <div class="mtxs c-8">You must be on the team to enter the locker room.</div>
    <div class="mtxs">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="mts-plus">
          <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "paxxxs bss bwas bc-12 full-width" %>
        </div>
        <div class="mts-plus">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "paxxxs bss bwas bc-12 full-width" %>
        </div>
        <div class="mts-plus">
          <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off", class: "paxxxs bss bwas bc-12 full-width" %>
        </div>
        <div class="mts-plus">
          <%= f.submit "Sign up", class: "btn btn-primary full-width" %>
        </div>
      <% end %>
    </div>
    <div class="mtl">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
