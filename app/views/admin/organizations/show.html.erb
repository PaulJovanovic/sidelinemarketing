<div class="dvm lhm">
  <%= link_to "Organizations", admin_organizations_path, class: "c-red" %> &gt; <%= @organization.name %>
</div>
<div class="row nmhxxs">
  <div class="col-sm-8 phxxs">
    <%= link_to "Add Team", new_admin_organization_team_path(@organization), class: "btn btn-primary" %>
    <div class="mtm">
      <% @teams.each_with_index do |team, index| %>
        <div class="pas<%= index % 2 == 0 ? " bg-13" : " bg-12" %>">
          <table class="full-width">
            <tr>
              <td class="fwl">
                <%= link_to team.name, admin_organization_team_path(@organization, team) %>
              </td>
              <td class="text-right">
                <%= link_to edit_admin_organization_team_path(@organization, team) do %>
                  <i class="fa fa-edit"></i>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
