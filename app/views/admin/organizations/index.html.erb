<div class="dvm lhm">
  Organizations
</div>
<div class="row nmhxxs">
  <div class="col-sm-8 phxxs">
    <%= link_to "Add Organization", new_admin_organization_path, class: "btn btn-primary" %>
    <div class="mtm">
      <% @organizations.each_with_index do |organization, index| %>
        <div class="pas<%= index % 2 == 0 ? " bg-10" : " bg-12" %>">
          <table class="full-width">
            <tr>
              <td class="fwl">
                <%= link_to organization.name, admin_organization_path(organization) %>
              </td>
              <td class="text-right">
                <%= link_to edit_admin_organization_path(organization) do %>
                  <i class="fa fa-edit"></i>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
