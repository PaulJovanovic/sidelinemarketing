<div class="dvm lhm">
  Galleries
</div>
<div class="row nmhxxs">
  <div class="col-sm-8 phxxs">
    <%= link_to "Add Gallery", new_admin_gallery_path, class: "btn btn-primary" %>
    <div class="mtm">
      <table class="full-width">
        <tbody class="js-sortable" data-url=<%= placements_admin_galleries_url %>>
          <% @galleries.each_with_index do |gallery, index| %>
            <tr id="<%= "sortable-#{gallery.id}" %>" class="pas<%= index % 2 == 0 ? " bg-13" : " bg-12" %>">
              <td class="phxxxs pvxs">
                <i class="fa fa-arrows"></i>
              </td>
              <td class="phxxxs pvxs fwl full-width">
                <%= gallery.name %>
              </td>
              <td class="phxxxs pvxs">
                <%= link_to admin_gallery_path(gallery), class: "btn btn-primary" do %>
                  <i class="fa fa-bars"></i> <span class="hidden-xs">Photos</span>
                <% end %>
              </td>
              <td class="phxxxs pvxs">
                <%= link_to edit_admin_gallery_path(gallery), class: "btn btn-primary" do %>
                  <i class="fa fa-edit"></i> <span class="hidden-xs">Edit</span>
                <% end %>
              </td>
              <td class="phxxxs pvxs">
                <%= link_to admin_gallery_path(gallery), method: :delete, data: { confirm: "Are you sure you want to delete this gallery?" }, class: "btn btn-primary" do %>
                  <i class="fa fa-times"></i> <span class="hidden-xs">Delete</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
