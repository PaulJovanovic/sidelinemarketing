<div class="dvm lhm">
  <%= link_to "Organizations", admin_organizations_path, class: "c-red" %> &gt; <%= link_to @organization.name, admin_organization_path(@organization), class: "c-red" %> &gt; <%= @team.name %>
</div>
<div class="row nmhxxs">
  <div class="col-sm-8 phxxs">
    <%= link_to "Add Athlete", new_admin_organization_team_athlete_path(@organization, @team), class: "btn btn-primary" %>
    <div class="mtm">
      <table class="full-width">
        <% @athletes.each_with_index do |athlete, index| %>
          <tr class="pas<%= index % 2 == 0 ? " bg-13" : " bg-12" %>">
            <td class="phxxxs pvxs fwl full-width">
              <%= athlete.name %>
            </td>
            <td class="phxxxs pvxs">
              <%= link_to edit_admin_organization_team_athlete_path(@organization, @team, athlete), class: "btn btn-primary" do %>
                <i class="fa fa-edit"></i> <span class="hidden-xs">Edit</span>
              <% end %>
            </td>
            <td class="phxxxs pvxs">
              <%= link_to admin_organization_team_athlete_path(@organization, @team, athlete), method: :delete, data: { confirm: "Are you sure you want to delete this athlete?" }, class: "btn btn-primary" do %>
                <i class="fa fa-times"></i> <span class="hidden-xs">Delete</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
